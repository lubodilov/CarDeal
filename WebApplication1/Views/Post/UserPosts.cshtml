@using Microsoft.AspNetCore.Identity;
@using CarDeal.Data;
@using CarDeal.Models.DTOs;
@model List<PostDTO>
@inject SignInManager<User> signinManager;

@{
    ViewData["Title"] = "UserPosts";
}
<h1>These are the posts you have created </h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <a class="btn btn-group-lg" asp-action="SortCarBrand"> <strong> CarBrand  </strong> </a>
            </th>
            <th>
                <a class="btn btn-group-lg" asp-action="SortCarModel"> <strong>CarModel</strong> </a>
            </th>
            <th>
                <a class="btn btn-group-lg" asp-action="SortDescribtion"> <strong>Describtion</strong> </a>
            </th>
            <th>
                <a class="btn btn-group-lg" asp-action="SortCategory"> <strong>Category</strong> </a>
            </th>
            <th>
                <a class="btn btn-group-lg" asp-action="SortRegion"> <strong>Region</strong> </a>
            </th>
            <th>
                <a class="btn btn-group-lg" asp-action="SortPrice"> <strong>Price</strong> </a>
            </th>
            <th>
                <a class="btn btn-group-lg" asp-action="SortPublish"> <strong>Publish</strong> </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CarBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Describtion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publish)
            </td>
            <td>
                <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
@if (this.signinManager.IsSignedIn(User))
{
    <a class="btn btn-outline-primary" asp-area="" asp-controller="Post" asp-action="Create">Create</a>
    <a class="btn btn-outline-info" asp-area="" asp-controller="Post" asp-action="ShowSearchForm">Search for a post</a>
}
else
{
    <p>Login to create a post</p>
    <a class="btn btn-primary" asp-controller="Account" asp-action="Login">Login</a>
}