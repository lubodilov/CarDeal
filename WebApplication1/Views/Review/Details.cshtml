@using CarDeal.Models.DTOs;
@model ReviewDTO;


@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        <dt class="col-sm-2">
            Describtion
        </dt>
        <dd class="col-sm-10">
            @Model.Describtion
        </dd>
        <dt class="col-sm-2">
            Stars
        </dt>
        <dd class="col-sm-10">
            @Model.Stars

        </dd>
        <dt class="col-sm-2">
            Publish
        </dt>
        <dd class="col-sm-10">
            @Model.Publish

        </dd>
        <dt class="col-sm-2">
            EndDate
        </dt>
    </dl>
</div>

<div>
    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a class="btn btn-outline-dark" asp-action="UserReviews">Back to List</a>
</div>
