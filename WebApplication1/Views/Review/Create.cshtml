@using Microsoft.AspNetCore.Identity;
@model CarDeal.Models.Review
@inject SignInManager<User> signinManager;
@if (this.signinManager.IsSignedIn(User))
{
    <h1>Create</h1>

    <h4>Review</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Describtion" class="control-label"></label>
                    <textarea asp-for="Describtion" class="form-control"></textarea>
                    <span asp-validation-for="Describtion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Stars" class="control-label"></label>
                    <input asp-for="Stars" class="form-control" />
                    <span asp-validation-for="Stars" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Publish" class="control-label"></label>
                    <input asp-for="Publish" class="form-control" />
                    <span asp-validation-for="Publish" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostId" class="control-label"></label>
                    <input asp-for="PostId" class="form-control" />
                    <span asp-validation-for="PostId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-outline-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn btn-outline-dark" asp-action="UserReviews">Back to List</a>
    </div>
}
else
{
    <p>Login to create a post</p>
    <a class="btn btn-primary" asp-controller="Account" asp-action="Login">Login</a>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}